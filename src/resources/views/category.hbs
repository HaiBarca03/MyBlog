<div class="container mt-4">
  <h1 class="mb-4">Posts in <span class="text-primary">{{title}}</span> Category</h1>

  {{#if posts.length}}
    <div class="list-group">
      {{#each posts}}
        <div class="list-group-item mb-3 border rounded">
          <h2 class="h4">{{this.title}}</h2>
          <p class="mb-2 post-content">{{this.content}}</p>
          <a href="/post/{{slug}}" class="btn btn-primary">Read More</a>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info" role="alert">
      No posts found in this category.
    </div>
  {{/if}}
</div>
<style>
  .post-content {
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 7.5em; /* Điều chỉnh giá trị này nếu cần */
    line-height: 1.5em; /* Điều chỉnh giá trị này nếu cần */
}
</style>
